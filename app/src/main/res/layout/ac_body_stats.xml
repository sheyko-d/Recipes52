<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slk="http://schemas.slktechlabs.com/slk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background" >

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ll_MainLinearBodyStats2"
        android:layout_alignParentRight="true" >

        <LinearLayout
            android:id="@+id/chart"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:text="@string/press"
            android:textColor="#7d000000"
            android:textSize="@dimen/graph_hint" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_MainLinearBodyStats2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_relativeBodyStats2"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="7" >

        <LinearLayout
            android:id="@+id/ll_linear_BodyStats1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onViewClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_imgKCAL"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/tv_txt_KCAL"
                style="@style/style24"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onViewClick"
                android:text="@string/str_kcal_1"
                slk:typeface="font/ClementePDam-Bold.otf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_linear_BodyStats2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onViewClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_imgWEI"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/tv_txt_WEI"
                style="@style/style24"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onViewClick"
                android:text="@string/str_wei"
                slk:typeface="font/ClementePDam-Bold.otf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_linear_BodyStats3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onViewClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_imgWAI"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/tv_txt_WAI"
                style="@style/style24"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onViewClick"
                android:text="@string/str_wai"
                slk:typeface="font/ClementePDam-Bold.otf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_linear_BodyStats4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onViewClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_imgCHO"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/tv_txt_CHO"
                style="@style/style24"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onViewClick"
                android:text="@string/str_cho"
                slk:typeface="font/ClementePDam-Bold.otf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_linear_BodyStats5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onViewClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_imgTRI"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/tv_txt_TRI"
                style="@style/style24"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onViewClick"
                android:text="@string/str_tri"
                slk:typeface="font/ClementePDam-Bold.otf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_linear_BodyStats6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onViewClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_imgGLU"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/tv_txt_GLU"
                style="@style/style24"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onViewClick"
                android:text="@string/str_glu"
                slk:typeface="font/ClementePDam-Bold.otf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_linear_BodyStats7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onViewClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_imgIGF"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/tv_txt_IGF"
                style="@style/style24"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onViewClick"
                android:text="@string/str_igf"
                slk:typeface="font/ClementePDam-Bold.otf" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_relativeBodyStats2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp" >

        <com.stockholmapplab.recipes.typeface.CustomTextView
            android:id="@+id/tv_txt_set_goal"
            style="@style/style4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/str_set_goal_text "
            slk:typeface="font/ClementePDao-Heavy.otf" />

        <LinearLayout
            android:id="@+id/ll_body_stats_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_txt_set_goal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:padding="5dp" >

            <com.stockholmapplab.recipes.typeface.CustomButton
                android:id="@+id/bt_btn_set_goal"
                style="@style/style6"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/ic_blue_patch_right"
                android:onClick="onViewClick"
                android:text="@string/str_goal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@drawable/ac_about_text_selector"
                slk:typeface="font/ClementePDao-Heavy.otf" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>