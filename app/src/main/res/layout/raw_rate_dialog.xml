<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:padding="0dip"
    android:background="@drawable/ic_rate_background" >

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rate_dialog_raw_height_1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_rate_dialog_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_title"
        android:background="@color/rate_dialog_seprator_color" />

    <RelativeLayout
        android:id="@+id/ll_rate"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rate_dialog_raw_height_2"
        android:layout_below="@+id/view1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_rate_dialog_title"
            android:textColor="@color/rate_dialog_text_color"
            android:textSize="@dimen/font_size"/>
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_rate"
        android:background="@color/rate_dialog_seprator_color" />

    <RelativeLayout
        android:id="@+id/ll_remaind_me"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rate_dialog_raw_height_2"
        android:layout_below="@+id/view2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_remainind_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_remind_me_later"
            android:textColor="@color/rate_dialog_text_color"
            android:textSize="@dimen/font_size"/>
    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_remaind_me"
        android:background="@color/rate_dialog_seprator_color" />
    
    <RelativeLayout
        android:id="@+id/ll_no_thanks"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rate_dialog_raw_height_1"
        android:layout_below="@+id/view3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_no_thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_no_thanks"
            android:textColor="@color/rate_dialog_text_color"
            android:textSize="@dimen/font_size" />
    </RelativeLayout>
    

</RelativeLayout>