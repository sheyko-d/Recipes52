<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slk="http://schemas.slktechlabs.com/slk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/acIconImg"
        android:layout_width="@dimen/ab_ic_width_height"
        android:layout_height="@dimen/ab_ic_width_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ab_ic_margin_left"
        android:layout_marginRight="@dimen/ab_ic_margin_right"
        android:clickable="true"
        android:contentDescription="@null"
        android:onClick="back"
        android:scaleType="fitCenter"
        android:src="@drawable/ac_back_selector" />

    <com.stockholmapplab.recipes.typeface.CustomTextView
        android:id="@+id/acTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ab_title_txt_margin_horizontal"
        android:layout_toLeftOf="@+id/acNewImg"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ab_txt_size"
        slk:typeface="font/ClementePDac-ExtraLight.otf" />

    <ImageView
        android:id="@+id/acNewImg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ab_ic_width_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ab_ic_margin_left"
        android:layout_toLeftOf="@+id/acClearImg"
        android:clickable="true"
        android:contentDescription="@null"
        android:onClick="newIngredient"
        android:paddingBottom="@dimen/ab_ic_padding_vertical"
        android:paddingLeft="@dimen/ab_ic_padding_horizontal"
        android:paddingRight="@dimen/ab_ic_padding_horizontal"
        android:paddingTop="@dimen/ab_ic_padding_vertical"
        android:src="@drawable/ac_new_selector" />

    <ImageView
        android:id="@+id/acClearImg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ab_ic_width_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/ab_edit_ingredient_ic_margin"
        android:clickable="true"
        android:contentDescription="@null"
        android:onClick="clear"
        android:paddingBottom="@dimen/ab_ic_padding_vertical"
        android:paddingLeft="@dimen/ab_ic_padding_horizontal"
        android:paddingRight="@dimen/ab_ic_padding_horizontal"
        android:paddingTop="@dimen/ab_ic_padding_vertical"
        android:src="@drawable/ac_clear_selector" />

</RelativeLayout>