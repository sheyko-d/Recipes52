<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slk="http://schemas.slktechlabs.com/slk"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="@dimen/consumed_padding_left"
    android:layout_marginRight="@dimen/consumed_padding_right"
    android:background="@drawable/ic_background_dialog_patch" >

    <com.stockholmapplab.recipes.typeface.CustomTextView
        android:id="@+id/tv_txt_guide1"
        style="@style/style3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/consumed_margin_top"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        slk:typeface="font/ClementePDam-Bold.otf" />

    <RelativeLayout
        android:id="@+id/ll_linear1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_txt_guide1"
        android:layout_marginTop="@dimen/consumed_margin_top" >

        <ImageView
            android:id="@+id/iv_img_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name" />

        <com.stockholmapplab.recipes.typeface.CustomTextView
            android:id="@+id/tv_txt_guide2"
            style="@style/style23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/consumed_margin_top"
            android:clickable="true"
            android:drawableTop="@drawable/ic_share_facebook"
            android:gravity="center"
            android:text="@string/str_share"
            slk:typeface="font/ClementePDam-Bold.otf" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_linear2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialogue_height"
        android:layout_below="@+id/ll_linear1"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <com.stockholmapplab.recipes.typeface.CustomButton
            android:id="@+id/bt_btn_Cancel"
            style="@style/style5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_reset"
            android:textColor="@drawable/ac_about_text_selector"
            slk:typeface="font/ClementePDam-Bold.otf" />

        <com.stockholmapplab.recipes.typeface.CustomButton
            android:id="@+id/bt_btn_More"
            style="@style/style5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/consumed_padding_top"
            android:layout_weight="1"
            android:background="@drawable/ac_blue_patch_selector"
            android:textColor="@drawable/ac_about_text_selector"
            slk:typeface="font/ClementePDam-Bold.otf" />
    </LinearLayout>

</RelativeLayout>