<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slk="http://schemas.slktechlabs.com/slk"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_relative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_white_patch" >

        <com.stockholmapplab.recipes.typeface.CustomTextView
            android:id="@+id/tv_txtTap"
            style="@style/style25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_bulb"
            android:gravity="center"
            android:text="@string/str_tap_anywhere"
            slk:typeface="font/ClementePDal-SemiBoldItalic.otf" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/picker_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/time_picker_background"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <com.stockholmapplab.recipes.widget.WheelView          android:id="@+id/number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_meter_patch" />
    </LinearLayout>

</LinearLayout>