<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slk="http://schemas.slktechlabs.com/slk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <com.stockholmapplab.recipes.typeface.CustomTextView
        android:id="@+id/tv_txtDietJourney"
        style="@style/style4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/str_diet_journey"
        slk:typeface="font/ClementePDao-Heavy.otf" />

    <SeekBar
        android:id="@+id/sk_seekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_txtDietJourney"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:max="104"
        android:paddingLeft="@dimen/help_step_1_padding_left"
        android:paddingRight="@dimen/help_step_1_padding_right"
        android:progress="0"
        android:progressDrawable="@drawable/ic_progress_slider"
        android:secondaryProgress="0"
        android:thumb="@drawable/ic_progress_thumb" />

    <com.stockholmapplab.recipes.typeface.CustomTextView
        android:id="@+id/tv_txtWeeks"
        style="@style/style4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sk_seekBar"
        android:layout_marginTop="10dp"
        android:gravity="center"
        slk:typeface="font/ClementePDao-Heavy.otf" />

    <com.stockholmapplab.recipes.typeface.CustomTextView
        android:id="@+id/tv_txtInstruction"
        style="@style/style26"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_txtWeeks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_bulb"
        android:drawablePadding="10dp"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/str_instruction"
        android:textSize="14sp"
        slk:typeface="font/ClementePDal-SemiBoldItalic.otf" />

</RelativeLayout>