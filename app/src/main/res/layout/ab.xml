<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slk="http://schemas.slktechlabs.com/slk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/acIconImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:contentDescription="@null"
        android:onClick="back"
        android:scaleType="fitCenter"
        android:src="@drawable/ac_back_selector" />

    <com.stockholmapplab.recipes.typeface.CustomTextView
        android:id="@+id/acTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ab_txt_size"
        slk:typeface="font/ClementePDac-ExtraLight.otf" />

    <ImageView
        android:id="@+id/acAddImg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ab_ic_width_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:contentDescription="@null"
        android:onClick="add"
        android:src="@drawable/ac_add_selector"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/acFlagImg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ab_ic_width_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_flag_en"
        android:visibility="gone" />

</RelativeLayout>