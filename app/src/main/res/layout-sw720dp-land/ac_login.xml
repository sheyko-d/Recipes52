<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:slk="http://schemas.slktechlabs.com/slk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash_screen_patch" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <com.stockholmapplab.recipes.typeface.CustomTextView
            android:id="@+id/customTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/versionText"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="right"
            android:lineSpacingMultiplier="1.1"
            android:paddingTop="8dp"
            android:text="@string/str_main_title"
            android:textColor="@color/bold_grey_color"
            android:textSize="@dimen/login_title_main_text_size"
            slk:typeface="font/ClementePDac-ExtraLight.otf" />

        <com.stockholmapplab.recipes.typeface.CustomTextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/login_verion_text_margin_bottom"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/login_verion_text_margin_top"
            android:textColor="@drawable/ac_login_text_color_selector"
            android:textSize="@dimen/login_verion_text_size"
            slk:typeface="font/ClementePDaa-Hairline.otf" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/login_logo_height"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/versionText"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_diet_logo_small" />

        <LinearLayout
            android:id="@+id/loginLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/customTextView1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/login_facebook_margin_top"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="32dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <com.stockholmapplab.recipes.typeface.CustomTextView
                        android:id="@+id/customTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.1"
                        android:paddingTop="8dp"
                        android:text="@string/str_facebook_title"
                        android:textColor="@color/bold_grey_color"
                        android:textSize="@dimen/login_title_text_size"
                        slk:typeface="font/ClementePDac-ExtraLight.otf" />

                    <LinearLayout
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/login_margin_vertical_small"
                        android:layout_marginTop="@dimen/login_margin_vertical_small"
                        android:background="@drawable/btn_patch"
                        android:minHeight="@dimen/login_btn_height_min" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:background="@drawable/ic_btn_patch"
                            android:contentDescription="@null"
                            android:minWidth="@dimen/login_btn_height_min"
                            android:src="@drawable/ic_btn_facebook" />

                        <com.stockholmapplab.recipes.typeface.CustomTextView
                            android:id="@+id/loginFacebookText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/login_margin_vertical_small"
                            android:layout_marginLeft="@dimen/login_margin_horizontal"
                            android:layout_marginRight="@dimen/login_margin_horizontal"
                            android:layout_marginTop="@dimen/login_margin_vertical_small"
                            android:clickable="true"
                            android:onClick="facebook"
                            android:text="@string/str_facebook"
                            android:textColor="@drawable/ac_login_text_color_selector"
                            android:textSize="@dimen/login_verion_item_text_size"
                            slk:typeface="font/ClementePDam-Bold.otf" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <com.stockholmapplab.recipes.typeface.CustomTextView
                        android:id="@+id/CustomTextView02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.1"
                        android:paddingTop="8dp"
                        android:text="@string/str_credentials_title"
                        android:textColor="@color/bold_grey_color"
                        android:textSize="@dimen/login_title_text_size"
                        slk:typeface="font/ClementePDac-ExtraLight.otf" />

                    <LinearLayout
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/login_margin_vertical_small"
                        android:layout_marginTop="@dimen/login_margin_vertical_small"
                        android:background="@drawable/btn_patch"
                        android:minHeight="@dimen/login_btn_height_min" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_btn_patch"
                            android:contentDescription="@null"
                            android:minWidth="@dimen/login_btn_height_min"
                            android:src="@drawable/ic_btn_credentials" />

                        <com.stockholmapplab.recipes.typeface.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/login_margin_vertical_small"
                            android:layout_marginLeft="@dimen/login_margin_horizontal"
                            android:layout_marginRight="@dimen/login_margin_horizontal"
                            android:layout_marginTop="@dimen/login_margin_vertical_small"
                            android:clickable="true"
                            android:onClick="credentials"
                            android:text="@string/str_credentials"
                            android:textColor="@drawable/ac_login_text_color_selector"
                            android:textSize="@dimen/login_verion_item_text_size"
                            slk:typeface="font/ClementePDam-Bold.otf" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/CustomTextView03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.1"
                android:paddingTop="16dp"
                android:text="@string/str_registration_title"
                android:textColor="@color/bold_grey_color"
                android:textSize="@dimen/login_title_text_size"
                slk:typeface="font/ClementePDac-ExtraLight.otf" />

            <LinearLayout
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/login_margin_vertical_small"
                android:layout_marginTop="@dimen/login_margin_vertical_small"
                android:background="@drawable/btn_patch"
                android:minHeight="@dimen/login_btn_height_min" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_btn_patch"
                    android:contentDescription="@null"
                    android:minWidth="@dimen/login_btn_height_min"
                    android:src="@drawable/ic_btn_registration" />

                <com.stockholmapplab.recipes.typeface.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/login_margin_vertical_small"
                    android:layout_marginLeft="@dimen/login_margin_horizontal"
                    android:layout_marginRight="@dimen/login_margin_horizontal"
                    android:layout_marginTop="@dimen/login_margin_vertical_small"
                    android:clickable="true"
                    android:onClick="registration"
                    android:text="@string/str_registration"
                    android:textColor="@drawable/ac_login_text_color_selector"
                    android:textSize="@dimen/login_verion_item_text_size"
                    slk:typeface="font/ClementePDam-Bold.otf" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/facebookLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/customTextView1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:visibility="gone" >

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textView1"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_arrow_left"
                android:drawablePadding="@dimen/login_back_drawable_padding"
                android:onClick="back"
                android:padding="@dimen/login_back_text_padding"
                android:text="@string/str_back"
                android:textColor="@android:color/white"
                android:textSize="@dimen/login_back_text_size"
                slk:typeface="font/ClementePDam-Bold.otf" />

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/customTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:lineSpacingMultiplier="1.1"
                android:paddingTop="8dp"
                android:text="@string/str_credentials_enter"
                android:textColor="@color/bold_grey_color"
                android:textSize="@dimen/login_title_text_size"
                slk:typeface="font/ClementePDac-ExtraLight.otf" />

            <com.stockholmapplab.recipes.typeface.CustomEditText
                android:id="@+id/loginEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/login_margin_vertical_small"
                android:layout_marginTop="@dimen/login_margin_vertical_small"
                android:background="@drawable/ic_time_patch"
                android:hint="@string/str_login_edittext_email_hint"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/login_edittxt_padding_vertical"
                android:paddingLeft="@dimen/login_edittxt_padding_horizontal"
                android:paddingRight="@dimen/login_edittxt_padding_horizontal"
                android:paddingTop="@dimen/login_edittxt_padding_vertical"
                android:textColor="@android:color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/login_edittext_font_size"
                slk:typeface="font/ClementePDak-SemiBold.otf" />

            <com.stockholmapplab.recipes.typeface.CustomEditText
                android:id="@+id/loginPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginEmailEditText"
                android:layout_marginBottom="@dimen/login_margin_vertical_large"
                android:layout_marginTop="@dimen/login_margin_vertical_small"
                android:background="@drawable/ic_time_patch"
                android:ems="10"
                android:hint="@string/str_login_edittext_password_hint"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/login_edittxt_padding_vertical"
                android:paddingLeft="@dimen/login_edittxt_padding_horizontal"
                android:paddingRight="@dimen/login_edittxt_padding_horizontal"
                android:paddingTop="@dimen/login_edittxt_padding_vertical"
                android:textColor="@android:color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/login_edittext_font_size"
                slk:typeface="font/ClementePDak-SemiBold.otf" />

            <LinearLayout
                android:id="@+id/loginCredentialsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginPasswordEditText"
                android:background="@drawable/btn_patch"
                android:minHeight="@dimen/login_btn_height_min" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_btn_patch"
                    android:contentDescription="@null"
                    android:minWidth="@dimen/login_btn_height_min"
                    android:src="@drawable/ic_btn_credentials" />

                <com.stockholmapplab.recipes.typeface.CustomTextView
                    android:id="@+id/loginCredentialsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/login_margin_vertical_small"
                    android:layout_marginLeft="@dimen/login_margin_horizontal"
                    android:layout_marginRight="@dimen/login_margin_horizontal"
                    android:layout_marginTop="@dimen/login_margin_vertical_small"
                    android:clickable="true"
                    android:onClick="credentialsLogin"
                    android:text="@string/str_credentials"
                    android:textColor="@drawable/ac_login_text_color_selector"
                    android:textSize="@dimen/login_verion_item_text_size"
                    slk:typeface="font/ClementePDam-Bold.otf" />
            </LinearLayout>

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/customTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/loginCredentialsLayout"
                android:layout_marginTop="@dimen/login_password_margin_top"
                android:gravity="right"
                android:lineSpacingMultiplier="1.1"
                android:paddingTop="8dp"
                android:text="@string/str_password_title"
                android:textColor="@color/bold_grey_color"
                android:textSize="@dimen/login_title_text_size"
                slk:typeface="font/ClementePDac-ExtraLight.otf" />

            <LinearLayout
                android:id="@+id/loginPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customTextView3"
                android:layout_marginTop="@dimen/login_margin_vertical_small"
                android:background="@drawable/btn_patch"
                android:minHeight="@dimen/login_btn_height_min" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_btn_patch"
                    android:contentDescription="@null"
                    android:minWidth="@dimen/login_btn_height_min"
                    android:src="@drawable/ic_btn_password" />

                <com.stockholmapplab.recipes.typeface.CustomTextView
                    android:id="@+id/loginPasswordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/login_margin_vertical_small"
                    android:layout_marginLeft="@dimen/login_margin_horizontal"
                    android:layout_marginRight="@dimen/login_margin_horizontal"
                    android:layout_marginTop="@dimen/login_margin_vertical_small"
                    android:clickable="true"
                    android:onClick="password"
                    android:text="@string/str_password"
                    android:textColor="@drawable/ac_login_text_color_selector"
                    android:textSize="@dimen/login_verion_item_text_size"
                    slk:typeface="font/ClementePDam-Bold.otf" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/registrationLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/customTextView1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:visibility="gone" >

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textView1"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_arrow_left"
                android:drawablePadding="@dimen/login_back_drawable_padding"
                android:onClick="back"
                android:padding="@dimen/login_back_text_padding"
                android:text="@string/str_back"
                android:textColor="@android:color/white"
                android:textSize="@dimen/login_back_text_size"
                slk:typeface="font/ClementePDam-Bold.otf" />

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/customTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:lineSpacingMultiplier="1.1"
                android:paddingTop="8dp"
                android:text="@string/str_credentials_enter"
                android:textColor="@color/bold_grey_color"
                android:textSize="@dimen/login_title_text_size"
                slk:typeface="font/ClementePDac-ExtraLight.otf" />

            <com.stockholmapplab.recipes.typeface.CustomEditText
                android:id="@+id/registrationEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/login_margin_vertical_small"
                android:layout_marginTop="@dimen/login_margin_vertical_small"
                android:background="@drawable/ic_time_patch"
                android:hint="@string/str_login_edittext_email_hint"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/login_edittxt_padding_vertical"
                android:paddingLeft="@dimen/login_edittxt_padding_horizontal"
                android:paddingRight="@dimen/login_edittxt_padding_horizontal"
                android:paddingTop="@dimen/login_edittxt_padding_vertical"
                android:textColor="@android:color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/login_edittext_font_size"
                slk:typeface="font/ClementePDak-SemiBold.otf" />

            <LinearLayout
                android:id="@+id/loginRegistrationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registrationEmailEditText"
                android:layout_marginTop="@dimen/login_margin_vertical_small"
                android:background="@drawable/btn_patch"
                android:minHeight="@dimen/login_btn_height_min" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_btn_patch"
                    android:contentDescription="@null"
                    android:minWidth="@dimen/login_btn_height_min"
                    android:src="@drawable/ic_btn_registration" />

                <com.stockholmapplab.recipes.typeface.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/login_margin_vertical_small"
                    android:layout_marginLeft="@dimen/login_margin_horizontal"
                    android:layout_marginRight="@dimen/login_margin_horizontal"
                    android:layout_marginTop="@dimen/login_margin_vertical_small"
                    android:clickable="true"
                    android:onClick="registrationComplete"
                    android:text="@string/str_registration_complete"
                    android:textColor="@drawable/ac_login_text_color_selector"
                    android:textSize="@dimen/login_verion_item_text_size"
                    slk:typeface="font/ClementePDam-Bold.otf" />
            </LinearLayout>

            <com.stockholmapplab.recipes.typeface.CustomTextView
                android:id="@+id/customTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/loginRegistrationLayout"
                android:layout_marginTop="@dimen/login_password_margin_top"
                android:gravity="right"
                android:lineSpacingMultiplier="1.1"
                android:paddingTop="8dp"
                android:text="@string/str_password_title"
                android:textColor="@color/bold_grey_color"
                android:textSize="@dimen/login_title_text_size"
                slk:typeface="font/ClementePDac-ExtraLight.otf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customTextView3"
                android:layout_marginTop="@dimen/login_margin_vertical_small"
                android:background="@drawable/btn_patch"
                android:minHeight="@dimen/login_btn_height_min" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_btn_patch"
                    android:contentDescription="@null"
                    android:minWidth="@dimen/login_btn_height_min"
                    android:src="@drawable/ic_btn_password" />

                <com.stockholmapplab.recipes.typeface.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/login_margin_vertical_small"
                    android:layout_marginLeft="@dimen/login_margin_horizontal"
                    android:layout_marginRight="@dimen/login_margin_horizontal"
                    android:layout_marginTop="@dimen/login_margin_vertical_small"
                    android:clickable="true"
                    android:onClick="password"
                    android:text="@string/str_password"
                    android:textColor="@drawable/ac_login_text_color_selector"
                    android:textSize="@dimen/login_verion_item_text_size"
                    slk:typeface="font/ClementePDam-Bold.otf" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>